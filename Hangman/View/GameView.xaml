                  Grid.Row="3"
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  ItemsSource="{Binding ButtonsCollection}"
                  HorizontalAlignment="Center" VerticalAlignment="Bottom"
                  >
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Letter}"
                                 Visibility="{Binding Button_Visibility, Converter={StaticResource BoolKey}}"
                                 Command="{Binding DataContext.TestCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType = ItemsControl}}"
                                 CommandParameter="{Binding Letter}"
                                 FontSize="20" Background="Green"
                                 Height="50" Width="50" Margin="5"
                                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        
